{
  "compilerOptions": {
    "moduleResolution": "Node",
    "declaration": true,
    "module": "CommonJS",
    "sourceMap": true,
    "strict": true,
    "target": "es6",
    "esModuleInterop": true,
    "typeRoots": [
      "./node_modules/@types"
    ],
    "outDir": "dist",
    "lib": ["es2015", "es2016", "es2017", "es2018", "es2019", "es2020", "dom"]  // Added this line
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}